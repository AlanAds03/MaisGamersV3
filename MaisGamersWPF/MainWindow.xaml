<Window x:Class="MaisGamersWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaisGamersWPF"
        mc:Ignorable="d"
        Title="Mais Gamers" 
        Width= "{x:Static SystemParameters.PrimaryScreenWidth}"
        Left="0"
        Top="0"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Content/css/Estilo.xaml">
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>    
    </Window.Resources>
    
    
        
    
    <Grid>
        <Grid Style="{StaticResource GridMenu}">
            <Grid.Resources>
                <Style x:Key="GridMenu"></Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Button Content="Clientes"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
